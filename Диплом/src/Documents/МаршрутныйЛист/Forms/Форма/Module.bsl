		Строка.Номер = Выборка.Номер;
		Строка.Дата = Выборка.ДатаИВремяДоставки;
		Строка.Адрес = Выборка.Адрес;
		Строка.Сдача = Выборка.Сдача;
		Строка.Сумма = Выборка.ИтоговаяСумма;
		Строка.Галка = ложь;
	КонецЦикла;
	
	
	
КонецПроцедуры


